<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @music.title %>
      </p>
      <p class="prototype__hedding">
        <%= @music.artist %>
      </p>
      <%= link_to "by #{@music.user.nickname}" , root_path, class: :prototype__user %>
      <% if user_signed_in? && current_user.id == @music.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_music_path(@music.id), class: "btn btn-outline-info" %>
          <%= link_to "削除する", root_path, class: "btn btn-outline-danger" %>
        </div>
      <% end %>
      <div class="prototype__image">
        <%= image_tag @music.image.variant(resize: '500x500')if @music.image.attached? %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">曲紹介</p>
          <p class="detail__message">
            <%= @music.introduction %>
          </p>
        </div>
      </div>
      <audio src= "<%= "#{@music.audio}" %>" controls="">
        <a src="<%= "#{@music.audio}" %>">ダウンロード</a>
      </audio>
      <div class="prototype__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
          <%# <%= form_with local: true do |f|%>
            <div class="field">
              <%# <%= f.label :hoge, "コメント" %><br />
              <%# <%= f.text_field :hoge %>
            </div>
            <div class="actions">
              <%# <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <%# <% end %> 
        <%# // ログインしているユーザーには上記を表示する %>
        <ul class="comments_lists">
          <%# 投稿に紐づくコメントを一覧する処理を記述する %>
            <li class="comments_list">
              <%# <%= " コメントのテキスト "%>
              <%# <%= link_to "（ ユーザー名 ）", root_path, class: :comment_user %>
            </li>
          <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
        </ul>
      </div>
    </div>
  </div>
</main>

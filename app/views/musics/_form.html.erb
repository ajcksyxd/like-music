<%= form_with(model: music, local: true) do |f|%>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :artist, "アーティスト" %><br />
    <%= f.text_field :artist %>
  </div>

  <div class="field">
    <%= f.label :image, "イメージ画像" %><br />
    <%= f.file_field :image, id:"music-image" %>
  </div>
  <div id="image-list"></div>

  <div class="field">
    <%= f.label :audio, "mp3 file" %><br />
    <%= f.file_field :audio %>
  </div>

  <div class="field">
    <%= f.label :introduction, "曲紹介" %><br />
    <%= f.text_area :introduction, class: :form__text %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: "btn btn-outline-success" %>
  </div>
<% end %>
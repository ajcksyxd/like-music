<div class="card">
  <div class="card__body">
    <%= link_to music.title, root_path, class: :card__title%>
    <p class="card__summary">
      <%= music.artist %>
    </p>
    <%= link_to "by #{music.user.nickname}" , root_path, class: :card__user %>
  </div>
  <%= link_to (image_tag music.image.variant(resize: '500x500')if music.image.attached?), root_path , class: :card__img %>
</div>
